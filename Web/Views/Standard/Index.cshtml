@model Web.ViewModels.StandardIndexViewModel
@{
    ViewBag.Title = "Facilities";
}
<div class="tray_main">
    <h2>Facility</h2>

    <p>
        @Html.ActionLink("Create New", "Create", "Standard")
        @Html.ActionLink("Create New User", "Create", "User")
        @Html.ActionLink("Create New Asset", "Create", "Asset")
    </p>
    <table class="table-bordered">
        <tr>
            <th>
                Facility Name
            </th>
            <th>
                Landmark
            </th>
            <th>
                User Id
            </th>
            <th>
                Actions
            </th>

        </tr>


        @foreach (var item in Model.Facilities)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Landmark)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserId)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
        }
    </table>
    <br />
</div>